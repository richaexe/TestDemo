export const applyRoleBasedFilters = (
  department: string,
  role: string
): { AND: any[] } => {
  const filters: { AND: any[] } = { AND: [] };
  const fiveDaysAgo = new Date();
  fiveDaysAgo.setDate(fiveDaysAgo.getDate() - 5);

  switch (true) {
    case department === "COMPLIANCE" && role === "MAKER":
      filters.AND.push({ circularState: "NOT_INITIATED" });
      break;

    case department === "COMPLIANCE" && role === "CHECKER":
      filters.AND.push({ circularState: "INITIATED" });
      break;

    default:
      filters.AND.push(
        { dateOfDissemination: { gte: fiveDaysAgo } },
        { circularState: "CLOSURE" }
      );
  }
  return filters;
};
