<div className="diss_repo_filter_group">
                        <label htmlFor="circularStateFilter" className="diss_repo_filter_label">Circular State</label>
                        <select
                            id="circularStateFilter"
                            value={filterCircularState}
                            onChange={(e) => setFilterCircularState(e.target.value)}
                            className={`diss_repo_select ${!filterCircularState ? 'placeholder' : ''}`}
                        >
                            <option value="">All States</option>
                            {CircularStateOptions.map((option) => (
                                <option key={option} value={option}>
                                    {option === "NOT_INITIATED" ? "Not Initiated" :
                                        option === "INITIATED" ? "Initiated" :
                                            option === "REJECTED" ? "Rejected" :
                                                option === "CLOSURE" ? "Closure" : option}
                                </option>
                            ))}
                        </select>
                    </div>
