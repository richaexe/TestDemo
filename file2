useEffect(() => {
    // ✅ Show toast if redirected with a success message
    if (location.state?.toastMessage) {
      showToast(location.state.toastMessage, location.state.toastType);

      // ✅ Clear the state to prevent duplicate toasts on refresh
      navigate(location.pathname, { replace: true, state: {} });
    }
  }, [location, navigate]);


if (response.data.success) {
        // ✅ Store toast message in location.state before navigating
        navigate("/home", {
          state: { toastMessage: "Circular updated successfully!", toastType: "success" }
        });
      } else {
        showToast("Failed to update circular", "error");
      }
